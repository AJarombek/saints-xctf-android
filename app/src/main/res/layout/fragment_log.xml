<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:useDefaultMargins="true"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/log_run_name_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/run_name"
            android:textSize="18sp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/log_run_name"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/log_location_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:textSize="18sp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/log_location"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/log_date_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="18sp" />

        <Button
            android:id="@+id/log_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/pick_date"/>

        <TextView
            android:id="@+id/log_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/_01_01_2017"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/log_type_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workout_type"
            android:textSize="18sp"/>

        <Spinner
            android:id="@+id/log_type"
            android:inputType="text"
            android:layout_marginEnd="150dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="8"
        android:rowCount="2">

        <TextView
            android:id="@+id/log_distance_tag"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_height="wrap_content"
            android:text="@string/distance"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/log_distance"
            android:inputType="numberDecimal"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/log_metric_tag"
            android:text="@string/metric"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:textSize="18sp"/>

        <Spinner
            android:id="@+id/log_metric"
            android:layout_row="0"
            android:layout_column="6"
            android:layout_columnSpan="2"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/log_time_tag"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:text="@string/time"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/log_time_minutes"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnSpan="2"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="5"
            android:layout_columnSpan="1"
            android:text="@string/ms"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/log_time_seconds"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="6"
            android:layout_columnSpan="1"/>

    </GridLayout>

    <TextView
        android:id="@+id/log_feel_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feel"
        android:textSize="18sp"/>

    <SeekBar
        android:id="@+id/log_feel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="10"/>

    <TextView
        android:id="@+id/log_description_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/log_description"
        android:inputType="text"
        android:lines="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/colorAccent"
        android:text=""
        android:focusable="true"
        android:focusableInTouchMode="true">
    </TextView>

</LinearLayout>
