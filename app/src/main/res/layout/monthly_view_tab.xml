<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="7"
                    android:rowCount="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Leaderboard Filters:"
                        android:textSize="12sp"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:gravity="center_vertical">
                    </TextView>

                    <Button
                        android:id="@+id/filter_run"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:text="Run"
                        android:layout_column="2"
                        android:layout_row="0"
                        android:background="@color/stlawuRed"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:gravity="center_vertical"/>

                    <Button
                        android:id="@+id/filter_bike"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:text="Bike"
                        android:layout_column="3"
                        android:layout_row="0"
                        android:background="@color/lightGrey"
                        android:textAlignment="center"
                        android:gravity="center_vertical"/>

                    <Button
                        android:id="@+id/filter_swim"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:text="Swim"
                        android:layout_column="4"
                        android:layout_row="0"
                        android:background="@color/lightGrey"
                        android:textAlignment="center"
                        android:gravity="center_vertical"/>

                    <Button
                        android:id="@+id/filter_other"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:text="Other"
                        android:layout_column="5"
                        android:layout_row="0"
                        android:background="@color/lightGrey"
                        android:textAlignment="center"
                        android:gravity="center_vertical"/>

                </GridLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/previous_month"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/previous"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/cal_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="July 2017"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_gravity="center">
                </TextView>

                <Button
                    android:id="@+id/next_month"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/next"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:columnCount="8"
                android:rowCount="7"
                android:stretchColumns="*"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <TableRow
                    android:id="@+id/table_row_header"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:minHeight="40dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/cal_weekday_0"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Monday"
                            android:textSize="12sp"
                            android:gravity="center_horizontal">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:minHeight="40dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/cal_weekday_1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Tuesday"
                            android:textSize="12sp"
                            android:gravity="center_horizontal">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:minHeight="40dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/cal_weekday_2"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Wednesday"
                            android:textSize="12sp"
                            android:gravity="center_horizontal">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:minHeight="40dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/cal_weekday_3"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Thursday"
                            android:textSize="12sp"
                            android:gravity="center_horizontal">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:minHeight="40dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/cal_weekday_4"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Friday"
                            android:textSize="12sp"
                            android:gravity="center_horizontal">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:minHeight="40dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/cal_weekday_5"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Saturday"
                            android:textSize="12sp"
                            android:gravity="center_horizontal">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:minHeight="40dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/cal_weekday_6"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Sunday"
                            android:textSize="12sp"
                            android:gravity="center_horizontal">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:minHeight="40dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/cal_weekday_7"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Total"
                            android:textSize="12sp"
                            android:gravity="center_horizontal">
                        </TextView>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/table_row_0"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:weightSum="1">

                    <ProgressBar android:id="@+id/temp_progress" />

                </TableRow>

                <TableRow
                    android:id="@+id/table_row_1"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:weightSum="1">

                </TableRow>

                <TableRow
                    android:id="@+id/table_row_2"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:weightSum="1">

                </TableRow>

                <TableRow
                    android:id="@+id/table_row_3"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:weightSum="1">

                </TableRow>

                <TableRow
                    android:id="@+id/table_row_4"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:weightSum="1">

                </TableRow>

                <TableRow
                    android:id="@+id/table_row_5"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:weightSum="1">

                </TableRow>

            </TableLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>