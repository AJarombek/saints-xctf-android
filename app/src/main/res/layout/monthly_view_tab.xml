<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="1"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Leaderboard Filters:"
            android:textSize="18sp"
            android:layout_column="1"
            android:layout_row="0"
            android:gravity="center_vertical">
        </TextView>

        <Button
            android:id="@+id/filter_run"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:text="Run"
            android:layout_column="2"
            android:layout_row="0"
            android:background="@color/stlawuRed"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center_vertical"/>

        <Button
            android:id="@+id/filter_bike"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:text="Bike"
            android:layout_column="3"
            android:layout_row="0"
            android:background="@color/lightGrey"
            android:textAlignment="center"
            android:gravity="center_vertical"/>

        <Button
            android:id="@+id/filter_swim"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:text="Swim"
            android:layout_column="4"
            android:layout_row="0"
            android:background="@color/lightGrey"
            android:textAlignment="center"
            android:gravity="center_vertical"/>

        <Button
            android:id="@+id/filter_other"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:text="Other"
            android:layout_column="5"
            android:layout_row="0"
            android:background="@color/lightGrey"
            android:textAlignment="center"
            android:gravity="center_vertical"/>

    </GridLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="8"
        android:rowCount="6"
        android:stretchColumns="*"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="0dp">

            <GridLayout
                android:id="@+id/cal_0_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="1"
                android:orientation="horizontal"
                android:background="@drawable/custom_border_thin">

                <TextView
                    android:id="@+id/calday_0_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:text="0"/>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/calmiles_0_0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:text="100.25 \n Miles"/>
                </LinearLayout>
            </GridLayout>

            <GridLayout
                android:id="@+id/cal_0_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="1"
                android:orientation="horizontal"
                android:background="@drawable/custom_border_thin">

                <TextView
                    android:id="@+id/calday_0_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:text="0"/>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/calmiles_0_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:text="100.25 \n Miles"/>
                </LinearLayout>

            </GridLayout>

            <GridLayout
                android:id="@+id/cal_0_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="1"
                android:alignmentMode="alignBounds"
                android:background="@drawable/custom_border_thin">

                <TextView
                    android:id="@+id/calday_0_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:text="0"/>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/calmiles_0_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:text="100.25 \n Miles"/>
                </LinearLayout>
            </GridLayout>

        </TableRow>

    </TableLayout>
</LinearLayout>