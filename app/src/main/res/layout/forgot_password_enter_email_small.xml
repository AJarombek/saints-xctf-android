<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgot_password_enter_email"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:orientation="vertical"
    android:useDefaultMargins="true"
    android:visibility="visible"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jarombek.andy.saints_xctf_android.home.ForgotPasswordDialogFragment">

    <TextView
        android:id="@+id/enter_email_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_email"
        android:textSize="16sp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="2"/>

    <EditText
        android:id="@+id/enter_email"
        android:inputType="textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:layout_gravity="center_vertical|fill_horizontal"/>

    <Button
        android:id="@+id/submit_email_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:width="200dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Submit Email"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/forgot_password_enter_email_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/colorAccent"
        android:text=""
        android:textSize="12sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_columnSpan="2"
        android:gravity="center">
    </TextView>

</GridLayout>